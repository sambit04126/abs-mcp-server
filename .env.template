# Required: Google AI API Key for agent
GOOGLE_API_KEY=your_google_api_key_here

# Optional: Override ABS API base URL
ABS_API_BASE=https://api.data.abs.gov.au

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# LLM Model configuration (use stable production model)
LLM_MODEL=gemini-2.0-flash

# Safety limits
MAX_TURNS=5  # Max LLM invocations per query (prevents infinite loops)
